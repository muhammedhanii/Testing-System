# AIU Trips and Events - Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=tripsdb
POSTGRES_USER=aiu_user
POSTGRES_PASSWORD=aiu_password

# Backend Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/tripsdb
SPRING_DATASOURCE_USERNAME=aiu_user
SPRING_DATASOURCE_PASSWORD=aiu_password
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=yourSecretKeyForJWTTokenGenerationPleaseChangeInProduction
JWT_EXPIRATION=86400000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8081
